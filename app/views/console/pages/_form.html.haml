= form_for [:console, @page] do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content, class: 'rich-editor input-xxlarge'
  .field
    = f.label :display
    = f.check_box :display
  .actions
    = f.submit 'Save', :class => 'btn btn-primary btn-large'
