%section
  .page-header
    %h1 static pages

  -if @pages.present?
    %table.table.table-striped
      %tr
        %th title
        %th content
        %th visibility
        %th

      - @pages.each do |page|
        %tr
          %td
            = link_to page.title, console_page_path(page)
          %td= page.content.html_safe
          %td= page.display ? 'visible' : 'hidden'
          %td
            = link_to ' edit', edit_console_page_path(page), :class => 'btn icon-edit btn-mini'
            = link_to ' delete', console_page_path(page), :confirm => 'are you sure to delete this page?', :method => :delete, :class => 'btn btn-danger icon-minus-sign btn-mini'

    %br
  - else
    .alert.alert-warning
      no pages added so far!
  = link_to ' new page', new_console_page_path, :class => 'btn btn-primary icon-plus-sign'
