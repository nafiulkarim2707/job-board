%section
  .page-header
    %h1= @company.name

  .row
    .span6
      %p= @company.overview.html_safe
    .span5.well.contact-info
      .row
        .span1
          %strong E-mail
        .span4
          = @company.email

      .row
        .span1
          %strong Website
        .span4
          = link_to @company.website, @company.website

      .row
        .span1
          %strong Address
        .span4
          %p= simple_format @company.address.html_safe


