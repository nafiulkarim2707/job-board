%section.form
  .page-header
    %h1 companies
  -if @companies.present?
    %table.table.table-striped
      %tr
        %th name
        %th email
        %th website
        %th address
        %th

      - @companies.each do |company|
        %tr
          %td{style: 'width: 10%'}= company.name
          %td{style: 'width: 10%'}= company.email
          %td{style: 'width: 10%'}= company.website
          %td{style: 'width: 30%'}= company.address
          %td
            .btn-group
              = link_to '<i class="icon-share-alt">&nbsp;</i>show'.html_safe, company_path(company), :class => 'btn btn-mini', target: '_blank'
              = link_to '<i class="icon-pencil">&nbsp;</i>edit'.html_safe, edit_console_company_path(company), :class => 'btn btn-mini'
              = link_to '<i class="icon-remove">&nbsp;</i>destroy'.html_safe, console_company_path(company), :confirm => 'are you sure to delete this company?',
                        :method => :delete, :class => 'btn btn-danger btn-mini'
  - else
    .alert.alert-warning
      no companies added so far!

  .form-actions
    = link_to '<i class="icon-plus"></i>&nbsp;add company'.html_safe, new_console_company_path, :class => 'btn btn-primary'
