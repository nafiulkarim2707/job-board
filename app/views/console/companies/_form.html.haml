= form_for [:console, @company], :html => {class: 'form-horizontal'} do |f|
  - if @company.errors.any?
    .offset1
      #error_explanation.well
        %h2= "#{pluralize(@company.errors.count, "error")} prohibited this console_company from being saved:"
        %ul
          - @company.errors.full_messages.each do |msg|
            %li= msg

  .control-group
    = f.label :name, 'name', :class => 'control-label'
    .controls
      = f.text_field :name, class: 'input-xxlarge'

  .control-group
    = f.label :email, 'email', :class => 'control-label'
    .controls
      .input-prepend
        %span.add-on.muted @
        = f.email_field :email

  .control-group
    = f.label :website, 'website', class: 'control-label'
    .controls
      = f.url_field :website, class: 'input-xxlarge'

  .control-group
    = f.label :address, 'address', class: 'control-label'
    .controls
      = f.text_area :address, class: 'input-xxlarge', rows: 4

  .control-group
    = f.label :overview, 'overview', class: 'control-label'

    .controls
      = f.text_area :overview, class: 'rich-editor input-xxlarge'

  .form-actions
    %a.btn.btn-large{type: 'button', href: console_companies_path}
      Cancel
    = f.submit ' save', :class => 'btn btn-primary btn-large icon-ok'
