= form_for [:console, @company] do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this console_company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :address
    = f.text_field :address
    .field
    = f.label :overview
    = f.text_area :overview
  .actions
    = f.submit 'Save Company', :class => 'btn btn-primary btn-large'
