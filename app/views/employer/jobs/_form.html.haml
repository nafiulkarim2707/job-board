= form_for([:employer, @job], :html => { :class => 'form-horizontal' }) do |f|
  -if @job.errors.any?
    .offset1
      #error_explanation.well
        %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
        %ul
          - @job.errors.full_messages.each do |msg|
            %li= msg
  .tabbable
    %ul.nav.nav-tabs
      %li.active
        %a.active{'data-toggle' => "tab", href: '#tab-basic-info'}
          basic Info
      %li
        %a{href: '#tab-details', 'data-toggle' => "tab"} details
      %li
        %a{href: '#tab-instruction', 'data-toggle' => "tab"} instructions
      %li
        %a{href: '#tab-expiry', 'data-toggle' => "tab"} expiry

    .tab-content
      #tab-basic-info.active.tab-pane
        = render 'console/jobs/basic_form', :f => f

      #tab-details.tab-pane
        = render 'console/jobs/details_form', :f => f

      #tab-instruction.tab-pane
        = render 'console/jobs/instruction_form', :f => f

      #tab-expiry.tab-pane
        = render 'console/jobs/expiry_form', :f => f


